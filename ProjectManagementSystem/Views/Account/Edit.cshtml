@model ProjectManagementSystem.Models.AccountViewModels.EditViewModel
@{  
    ViewBag.Title = "Edit";  
}  
   
<div class="card" style="width:60%; margin:auto;">  
    <div class="card-header bg-dark text-white">  
        <h3>Edit Employee</h3>  
    </div>  
    <div class="card-body">  
        @using (Html.BeginForm())  
        {  
            @Html.AntiForgeryToken()  
            @Html.HiddenFor(m => m.Id)  
            <div class="row">  
                <div class="col-md-6">  
                    <div class="form-group">  
                        @Html.LabelFor(m => m.FullName)  
                        @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control" } })  
                        @Html.ValidationMessageFor(m => m.FullName)  
                    </div>  
                </div>  
                <div class="col-md-6">  
                    <div class="form-group">  
                        @Html.LabelFor(m => m.UserName)  
                        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })  
                        @Html.ValidationMessageFor(m => m.UserName)  
                    </div>  
                </div>  
            </div>  
            <div class="row">  
                <div class="col-md-6">  
                    <div class="form-group">  
                        @Html.LabelFor(m => m.Email)  
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })  
                        @Html.ValidationMessageFor(m => m.Email)  
                    </div>  
                </div>  
                
            </div>       
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <select asp-for="RoleName" asp-items="@Model.Roles" >
                    <option selected value=@Model.RoleName>@Model.RoleName</option>
                </select>
            </div>
            <div class="form-group">  
                <button type="submit" class="btn btn-primary">Update</button>  
            </div>  
        }  
    </div>  
</div>  