@model IEnumerable<ProjectManagementSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users";
}

<table class="table table-bordered">  
    <thead>  
        <tr>  
            <th>@Html.DisplayNameFor(m => m.FullName)</th>  
            <th>@Html.DisplayNameFor(m => m.UserName)</th>  
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.RoleName)</th>
            <th>Action(s)</th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var u in Model)  
        {  
            <tr>  
                <td>@u.FullName</td>  
                <td>@u.UserName</td>  
                <td>@u.Email</td>
                <td>@u.RoleName</td>
                <td>  
                   @Html.ActionLink("Details","Details",new {id=u.Id },new {@class="btn btn-info"})  
                   @Html.ActionLink("Edit", "Edit", new { id = u.Id }, new { @class = "btn btn-primary" })  
                   @Html.ActionLink("Delete", "Delete", new { id = u.Id }, new { @class = "btn btn-danger" })  
                </td>  
            </tr>  
        }  
    </tbody>  
</table>  