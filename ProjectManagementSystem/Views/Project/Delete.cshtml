@model ProjectManagementSystem.Models.Project

@{  
    ViewBag.Title = "Delete";  
}  
   
<h3 class="text-center text-uppercase">Delete Project Record</h3>  
<div class="card" style="width:50%; margin:auto;">  
    <div class="card-header">  
        <h3>Are you sure you want to delete this?</h3>  
    </div>  
    <div class="card-body">  
        <div class="row">  
            <div class="col-md-2">  
   
            </div>  
            <div class="col-md-10">  
            </div>  
   
        </div>  
   
        <dl class="dl-horizontal">  
            <div class="form-group">
                <label asp-for="ProjectName"></label>
                <input readonly="readonly"  asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                            <label> Project Manager:</label>
                            <input readonly="readonly"  asp-for="ProjectManager.FullName" class="form-control" />
            </div>
            
          
          
        </dl>  
        @using (Html.BeginForm())  
        {  
            @Html.AntiForgeryToken()  
            <div class="form-actions no-color">  
                <input type="submit" value="Delete" class="btn btn-danger mr-3" /> |  
                @Html.ActionLink("Back to List", "Projects")  
            </div>  
        }  
    </div>  
</div> 