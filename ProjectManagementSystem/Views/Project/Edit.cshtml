@model ProjectManagementSystem.Models.ProjectViewModels.ProjectViewModel
@{  
    ViewBag.Title = "Edit";  
}  
   
< class="card" style="width:60%; margin:auto;">  
    <div class="card-header bg-dark text-white">  
        <h3>Edit Employee</h3>  
    </div>  
    <div class="card-body">  
        @using (Html.BeginForm())  
        {  
            @Html.AntiForgeryToken()  
            @Html.HiddenFor(m => m.ProjectCode)  
            <div class="row">  
                <div class="col-md-6">  
                    <div class="form-group">  
                        @Html.LabelFor(m => m.ProjectName)  
                        @Html.EditorFor(m => m.ProjectName, new { htmlAttributes = new { @class = "form-control" } })  
                        @Html.ValidationMessageFor(m => m.ProjectName)  
                    </div>  
                </div>  
            </div>
            <div class="form-group">
                <label>Project Manager: </label>
                <select asp-for="ProjectManagerId" asp-items="@Model.ProjectManagers" >
                    <option selected value=@Model.ProjectManagerId>@Model.ProjectManager.FullName</option>
                </select>
            </div>
            <div class="form-group">  
                <button type="submit" class="btn btn-primary">Update</button>  
            </div>  
        }  
    </div>  
